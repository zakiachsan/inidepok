# ===========================================
# PRODUCTION ENVIRONMENT VARIABLES
# ===========================================
# Copy this file to .env.production and fill in the values

# ===========================================
# DATABASE
# ===========================================
POSTGRES_USER=inidepok
POSTGRES_PASSWORD=CHANGE_THIS_TO_A_SECURE_PASSWORD
POSTGRES_DB=inidepok

# This is constructed automatically in docker-compose, but needed for local builds
DATABASE_URL=postgresql://inidepok:YOUR_PASSWORD@postgres:5432/inidepok?schema=public

# ===========================================
# AUTH (NextAuth.js)
# ===========================================
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET=CHANGE_THIS_TO_A_SECURE_RANDOM_STRING
NEXTAUTH_URL=https://inidepok.com

# ===========================================
# APP
# ===========================================
NEXT_PUBLIC_APP_URL=https://inidepok.com
NEXT_PUBLIC_APP_NAME=Ini Depok

# ===========================================
# SSL (Let's Encrypt)
# ===========================================
SSL_EMAIL=admin@inidepok.com
